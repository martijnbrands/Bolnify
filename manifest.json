{
  "name": "Bolnify",
  "version": "1.0.3",
  "manifest_version": 2,
  "description": "Bolnify is a Google Chrome extension that sends users a desktop notification as soon as they have sold something through Bol.com LVB",
  "homepage_url": "https://bol.com",
  "icons": {
    "16": "assets/icons/icon16.png",
    "19": "assets/icons/icon19.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "browser_action":{
    "default_popup": "popup.html",
    "default_title": "Bolnify"
  },
  "options_page": "options.html",

  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "notifications",
    "storage", 
    "alarms",
    "https://login.bol.com/token?grant_type=client_credentials",
    "https://api.bol.com/retailer/orders?fulfilment-method=FBB",
    "https://api.bol.com/retailer/orders/*"
  ]
}